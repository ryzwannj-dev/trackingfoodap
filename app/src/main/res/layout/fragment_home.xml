<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/background_color_lite">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_search_bar"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <EditText
            android:id="@+id/search_field"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_35sdp"
            android:ems="10"
            android:inputType="text"
            android:hint="Rechercher"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColorHint="@color/text_color"
            android:textColor="@color/text_color"
            android:background="@android:color/transparent"
            />

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_find"
            app:tint="@color/main_color"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:clickable="true"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/filter_burger"
            android:clickable="true"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:background="@drawable/ic_search_bar"
            >

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/ic_burger"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text="Burger"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_pizza"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/ic_search_bar"
            android:clickable="true"
            >

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/ic_pizza"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text="Pizza"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_sandwich"
            android:layout_width="@dimen/_68sdp"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/ic_search_bar"
            android:clickable="true"
            >

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/ic_burger"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text="Sandwich"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_texmex"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:background="@drawable/ic_search_bar"
            android:layout_marginLeft="@dimen/_5sdp"
            android:clickable="true"
            >

            <ImageView
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/ic_texmex"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text="Tex-mex"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_tacos"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:background="@drawable/ic_search_bar"
            android:layout_marginLeft="@dimen/_5sdp"
            android:clickable="true"
            >

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/ic_tacos"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Tacos"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/_270sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:id="@+id/create_food"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_create_food_button"
        android:scaleType="fitXY"
        android:src="@drawable/ic_create_food"
        app:tint="@color/background_color_lite"
        />


</FrameLayout>